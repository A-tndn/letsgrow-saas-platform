# LetsGrow Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://postgres:password@db:5432/letsgrow

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=true

# Redis Configuration (for Celery and caching)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# External API Keys
OPENAI_API_KEY=your-openai-api-key
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@letsgrow.com

# Security
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,mp4,mov

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://redis:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/letsgrow.log

# Production Settings (set these in production)
FORCE_HTTPS=false
TRUSTED_HOSTS=localhost,127.0.0.1
